{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "logo": {
                "type": "string",
                "format": "uri"
              },
              "description": {
                "type": "string"
              },
              "repository": {
                "type": "object",
                "properties": {
                  "host": {
                    "type": "string",
                    "enum": [
                      "github",
                      "gitlab"
                    ]
                  },
                  "username": {
                    "type": "string"
                  },
                  "project": {
                    "type": "string"
                  }
                },
                "required": [
                  "host",
                  "username",
                  "project"
                ],
                "additionalProperties": false
              },
              "links": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string"
                    },
                    "link": {
                      "type": "string",
                      "format": "uri"
                    },
                    "primary": {
                      "type": "boolean",
                      "default": false
                    }
                  },
                  "required": [
                    "text",
                    "link"
                  ],
                  "additionalProperties": false
                }
              },
              "technologies": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "name",
              "logo",
              "description",
              "repository",
              "links",
              "technologies"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "data"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}